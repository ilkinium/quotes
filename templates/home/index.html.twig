{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

    <h1 class="title">Quotes</h1>

    <div class="tile is-ancestor">
        {% for quote in quotes %}
            <div class="tile is-4">
                <div class="card">
                    <div class="card-content">
                        <p class="title">
                            “{{ quote.body }}”
                        </p>
                        <p class="subtitle">
                            {{ quote.author.name }}
                        </p>
                    </div>
                    <footer class="card-footer">
                        <p class="card-footer-item">
                  <span class="has-text-grey">
                    {{ quote.type.name }}
                  </span>
                        </p>
                    </footer>
                </div>
            </div>
        {% else %}
            <div class="tile">
                <div class="card">
                    <div class="card-content">
                        No records found
                    </div>
                </div>
            </div>
        {% endfor %}


    </div>
{% endblock %}
